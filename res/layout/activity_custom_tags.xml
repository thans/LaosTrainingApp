<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_tags_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:background="#000000">
    <RelativeLayout 
        android:id="@+id/custom_tags_relative_layout"
	    android:layout_width="0dp" 
        android:layout_height="fill_parent"
        android:layout_weight=".7">
	
	    <ImageView
	        android:id="@+id/fridge_tag"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/fridgetag"
	        android:layout_centerVertical="true"
	        android:layout_centerHorizontal="true" />
	    <TextView
	        android:id="@+id/alarm_up"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/fridge_tag"
	        android:layout_alignTop="@+id/fridge_tag"
	        android:layout_alignRight="@+id/fridge_tag"
	        android:layout_alignBottom="@+id/fridge_tag"
	        android:layout_marginLeft="541dp"
	        android:layout_marginTop="80dp"
	        android:textSize="24sp"
	        android:text="@string/up_arrow" />
	    <TextView
	        android:id="@+id/alarm_down"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/fridge_tag"
	        android:layout_alignTop="@+id/fridge_tag"
	        android:layout_alignRight="@+id/fridge_tag"
	        android:layout_alignBottom="@+id/fridge_tag"
	        android:layout_marginLeft="559dp"
	        android:layout_marginTop="90dp"
	        android:textSize="24sp"
	        android:text="@string/down_arrow" />
	    
	    <TextView
	        android:id="@+id/alarm_ok_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/fridge_tag"
	        android:layout_alignTop="@+id/fridge_tag"
	        android:layout_alignRight="@+id/fridge_tag"
	        android:layout_alignBottom="@+id/fridge_tag"
	        android:layout_marginLeft="120dp"
	        android:layout_marginTop="140dp"
	        android:text="@string/alarm_ok"
	        android:textSize="48sp"
	        android:textColor="#000000" />
	    
	    <TextView
	        android:id="@+id/alarm_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/fridge_tag"
	        android:layout_alignTop="@+id/fridge_tag"
	        android:layout_alignRight="@+id/fridge_tag"
	        android:layout_alignBottom="@+id/fridge_tag"
	        android:layout_marginLeft="85dp"
	        android:layout_marginTop="162dp"
	        android:text="@string/alarm_alarm"
	        android:textSize="48sp"
	        android:textColor="#000000"
	        android:visibility="invisible" />
	    	    
	    <TextView
	        android:id="@+id/time_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/fridge_tag"
	        android:layout_alignTop="@+id/fridge_tag"
	        android:layout_alignRight="@+id/fridge_tag"
	        android:layout_alignBottom="@+id/fridge_tag"
	        android:layout_marginTop="150dp"
	        android:layout_marginLeft="260dp"
	        android:textSize="60sp"
	        android:text="@string/starting_time"
	        android:textColor="#000000" />
	    
	    
	    <TextView
	        android:id="@+id/negative_temp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/fridge_tag"
	        android:layout_alignTop="@+id/fridge_tag"
	        android:layout_alignRight="@+id/fridge_tag"
	        android:layout_alignBottom="@+id/fridge_tag"
	        android:layout_marginLeft="433dp"
	        android:layout_marginTop="149dp"
	        android:text="@string/negative_temperature"
	        android:textSize="60sp"
	        android:visibility="invisible" 
	        android:textColor="#000000" />
	    
	    <TextView
	        android:id="@+id/temp_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/fridge_tag"
	        android:layout_alignTop="@+id/fridge_tag"
	        android:layout_alignRight="@+id/fridge_tag"
	        android:layout_alignBottom="@+id/fridge_tag"
	        android:layout_marginLeft="450dp"
	        android:layout_marginTop="150dp"
	        android:text="@string/starting_temp"
	        android:textSize="60sp"
	        android:textColor="#000000" />
	    
	    <TextView
	        android:id="@+id/temp_units_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/fridge_tag"
	        android:layout_alignTop="@+id/fridge_tag"
	        android:layout_alignRight="@+id/fridge_tag"
	        android:layout_alignBottom="@+id/fridge_tag"
	        android:layout_marginLeft="575dp"
	        android:layout_marginTop="180dp"
	        android:text="@string/degrees_c"
	        android:textSize="32sp"
	        android:textColor="#000000" />
	        
	    <Button
	        android:id="@+id/set_button"
			android:layout_alignLeft="@+id/fridge_tag"
			android:layout_alignTop="@+id/fridge_tag"
			android:layout_width="65dp"
			android:layout_height="64dp"
			android:layout_marginTop="271dp"
			android:layout_marginLeft="126dp"
			android:background="@android:color/transparent" />
	
	    <Button
	        android:id="@+id/read_button"
			android:layout_alignLeft="@+id/fridge_tag"
			android:layout_alignTop="@+id/fridge_tag"
			android:layout_width="65dp"
			android:layout_height="64dp"
			android:layout_marginTop="271dp"
			android:layout_marginLeft="464dp"
			android:background="@android:color/transparent" />
	</RelativeLayout>
    <LinearLayout
	    android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight=".3"
        android:orientation="vertical"
        android:layout_marginRight="10dp">
	    <TextView
	        android:id="@+id/custom_tags_instructions"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textSize="24sp"
	        android:text="@string/custom_tags_intro"
	        android:textColor="#FFFFFF"/>
	    <RelativeLayout
	        android:id="@+id/next_button_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent">
	        <ImageButton
		        android:id="@+id/next_instruction"
		        android:layout_width="fill_parent"
		        android:layout_height= "100dp"
		        android:src="@drawable/ic_action_next_item"
		        android:background="#ff444444"
		        android:layout_alignParentBottom="true"
		        android:layout_marginBottom="10dp"
		        android:contentDescription="@string/next_button"
		        />
	    </RelativeLayout>
	</LinearLayout>
</LinearLayout>